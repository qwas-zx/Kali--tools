{
    "repository": {
        "name": "pentest-tools-downloader",
        "description": "Automated penetration testing tools downloader script",
        "private": false,
        "has_issues": true,
        "has_projects": true,
        "has_wiki": true
    },
    "files": {
        "required": [
            {
                "path": "README.md",
                "description": "Main readme with language selector"
            },
            {
                "path": "README_en.md",
                "description": "English documentation"
            },
            {
                "path": "README_zh.md",
                "description": "Chinese documentation"
            },
            {
                "path": "README_ru.md",
                "description": "Russian documentation"
            },
            {
                "path": "自动下载渗透工具.sh",
                "description": "Main script",
                "executable": true
            },
            {
                "path": "LICENSE",
                "description": "MIT License file"
            }
        ],
        "optional": [
            {
                "path": "tools_logo.png",
                "description": "Project logo"
            }
        ]
    },
    "git": {
        "initial_branch": "main",
        "commit_message": "Initial commit: Penetration Testing Tools Auto-Downloader",
        "remote": {
            "name": "origin",
            "url": "https://github.com/qwas-zx/Kali--tools"
        }
    },
    "checks": {
        "pre_upload": [
            {
                "type": "file_exists",
                "paths": ["README.md", "LICENSE", "自动下载渗透工具.sh"]
            },
            {
                "type": "file_permission",
                "path": "自动下载渗透工具.sh",
                "mode": 755
            },
            {
                "type": "content_check",
                "paths": ["*.md"],
                "verify": [
                    "language_links",
                    "license_badge",
                    "platform_badge"
                ]
            }
        ]
    },
    "ignore_patterns": [
        ".DS_Store",
        "Thumbs.db",
        "*.log",
        "*.tmp",
        "/opt/pentest_tools/*"
    ]
}
